{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": true, // 生成 .d.ts 文件
    "declarationDir": "dist", // .d.ts 文件输出到 dist
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true, // 显式告诉 TS 从 tslib 导入辅助函数
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
